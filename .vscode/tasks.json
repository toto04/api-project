{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "gcc: build",
            "command": "/usr/bin/gcc",
            "args": [
                "-Wall",
                "-Werror",
                // "-Og",
                // "-O2",
                "-g3",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/source.c",
                "-o",
                "${workspaceFolder}/a.out"
            ],
            // "options": {
            //     "cwd": "${fileDirname}"
            // },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Attivit√† generata dal debugger.",
            "dependsOn": ["delete output.txt"]
        },
        {
            "type": "shell",
            "label": "delete output.txt",
            "command": "rm",
            "args": ["-f", "${workspaceFolder}/output.txt"]
        }
    ],
    "version": "2.0.0"
}
