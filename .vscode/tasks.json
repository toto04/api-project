{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "gcc: build",
            "command": "/usr/bin/gcc",
            "args": [
                "-Wall",
                "-Werror",
                "-g3",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main.c",
                "-o",
                "${workspaceFolder}/a.out"
            ],
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Attivit√† generata dal debugger.",
            "dependsOn": ["delete output.txt"],
            "dependsOrder": "sequence"
        },
        {
            "type": "shell",
            "label": "delete output.txt",
            "command": "rm",
            "args": ["-f", "${workspaceFolder}/output.txt"]
        },
        {
            "type": "shell",
            "label": "merge",
            "command": "mergec",
            "args": [
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/SUBMIT.c"
            ],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}
